<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="support.v7.view.CardView"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

            <com.caixihua.cardviewlib.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardShadowEndColor="#01000000"
                app:cardShadowStartColor="#30000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="com.caixihua.CardView"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
            </com.caixihua.cardviewlib.CardView>

            <com.caixihua.cardviewlib.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardShadowEndColor="#01ff0000"
                app:cardShadowStartColor="#30ff0000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="com.caixihua.CardView"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
            </com.caixihua.cardviewlib.CardView>

            <com.caixihua.cardviewlib.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardShadowEndColor="#0100ff00"
                app:cardShadowStartColor="#3000ff00">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="com.caixihua.CardView"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
            </com.caixihua.cardviewlib.CardView>

            <com.caixihua.cardviewlib.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardShadowEndColor="#010000ff"
                app:cardShadowStartColor="#300000ff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="com.caixihua.CardView"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
            </com.caixihua.cardviewlib.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>